{
  "name": "@ofan/disclaw",
  "version": "1.1.0",
  "description": "DiscordOps + OpenClaw integration â€” manage Discord structure as code",
  "type": "module",
  "bin": {
    "disclaw": "dist/cli.js"
  },
  "scripts": {
    "build": "sh scripts/gen-version.sh && tsc",
    "dev": "tsc --watch",
    "test": "node --test --experimental-strip-types src/*.test.ts src/**/*.test.ts",
    "disclaw": "FORCE_COLOR=1 node --experimental-strip-types src/cli.ts",
    "prepublishOnly": "sh scripts/gen-version.sh",
    "publish:npm": "npm run build && npm publish --access public",
    "publish:skill": "clawhub publish skills/disclaw",
    "publish:all": "npm run publish:npm && npm run publish:skill"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ofan/disclaw.git"
