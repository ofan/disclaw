    "dist"
  ],
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "@ofan/telemetry-relay-sdk": "^0.2.0",
    "chalk": "^5.6.2",
    "commander": "^14.0.3",
    "discord.js": "^14.25.1",
    "yaml": "^2.8.2",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/node": "^25.3.0",
    "typescript": "^5.9.3"
  },
  "overrides": {
    "undici": "^6.23.0"
  }
